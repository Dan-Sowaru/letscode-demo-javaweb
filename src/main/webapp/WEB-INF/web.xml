<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
<!--servlet-name aqui é um alias só, class precisa referencias uma classe que "extends HttpServlet" senão dá erro-->
<!--O Código abaixo é a forma manual do que o @WebServlet faz (como lombok)-->
        <servlet-name>formulario</servlet-name>
        <servlet-class>br.com.letscode.letscodedemojavaweb.servlet.Formulario</servlet-class>
    </servlet>
    <servlet-mapping>
            <servlet-name>formulario</servlet-name>
            <url-pattern>/formulario</url-pattern>
    </servlet-mapping>

</web-app>

